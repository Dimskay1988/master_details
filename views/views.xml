<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="master_details.list">
      <field name="name">master_details list</field>
      <field name="model">master_details.master_details</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="master_details.action_window">
      <field name="name">master_details window</field>
      <field name="res_model">master_details.master_details</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="master_details.action_server">
      <field name="name">master_details server</field>
      <field name="model_id" ref="model_master_details_master_details"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="master_details" id="master_details.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="master_details.menu_1" parent="master_details.menu_root"/>
    <menuitem name="Menu 2" id="master_details.menu_2" parent="master_details.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="master_details.menu_1_list" parent="master_details.menu_1"
              action="master_details.action_window"/>
    <menuitem name="Server to list" id="master_details" parent="master_details.menu_2"
              action="master_details.action_server"/>

  </data>
</odoo>