<odoo>
  <data>

    <!-- Определение представления списка -->
    <record model="ir.ui.view" id="view_masterdetails_tree">
      <field name="name">MasterDetails Tree View</field>
      <field name="model">masterdetails.masterdetails</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- Определение представления формы -->
    <record model="ir.ui.view" id="view_masterdetails_form">
      <field name="name">MasterDetails Form View</field>
      <field name="model">masterdetails.masterdetails</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="value"/>
              <field name="value2"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Определение действия открытия списка -->
    <record model="ir.actions.act_window" id="action_masterdetails">
      <field name="name">MasterDetails</field>
      <field name="res_model">masterdetails.masterdetails</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Добавление представлений в группу "Views" -->
    <menuitem name="MasterDetails" id="menu_masterdetails" sequence="1"/>
    <menuitem name="MasterDetails List" id="menu_masterdetails_list" parent="menu_masterdetails" action="action_masterdetails"/>

  </data>
</odoo>